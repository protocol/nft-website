@import 'util';
@import 'buttons';
@import 'layout-center';
@import 'header';
@import 'sidebar';
@import 'video';
@import 'alert-panels';

// apply scrolling by default excluding firefox due to trigger issues
html.smooth-scroll {
	scroll-behavior: smooth;
}

@supports (-moz-appearance: none) {
	html.smooth-scroll {
		scroll-behavior: auto;
	}
}

img[loading] {
	height: auto;
}

#app {
	font-family: 'Ubuntu', sans-serif;
	background-color: $primaryColor;

	.navbar {
		position: sticky;
	}

	.navbar .logo {
		height: 2.5rem;
		margin: 0;
		padding: 1px 3px 0px 0;
		vertical-align: top;
	}

	.site-name {
		font-size: 1.5rem;
		letter-spacing: -0.05rem;
		background: url('/images/nftschool-logo-text.svg') no-repeat;
		background-position-y: -2px;
		text-indent: -99999px;
		min-width: 180px;
		min-height: 47px;
		background-size: contain;
	}

	.sidebar {
		background-color: $reverseTextColor;
	}

	.page {
		background-color: #fff;
	}
}

a {
	color: $accentTextColor;
}

h1, h2, h3, h4 {
	font-family: 'VT323', monospace;
	font-weight: 400;
	color: $accentTextColor;
}

h1 {
	font-size: 3rem;
	padding-top: 2rem !important;
	padding-bottom: 0.5rem;
	line-height: 2.5rem;
}

h2 {
	font-size: 2rem;
	line-height: 1.2rem;
	border-bottom: 3px solid $secondaryColor;
    box-shadow:  3px 6px 0 -3px $tertiaryColor;
}

h3 {
	font-size: 1.75rem;
	line-height: 1.75rem;
}

h4 {
	font-size: 1.5rem;
	line-height: 1.5rem;
}

.content-footer {
	h3, a {
		color: $secondaryColor;
	}
}

.page-edit {
	font-family: 'VT323', monospace;
	font-size: 1.25rem;
	padding-bottom: 0 !important;
}

.custom-block.callout {
	background-color: lighten($accentColor, 80%);
	padding: 0.1rem 1.5rem;
	border-color: $accentColor;
	border-left-width: 0.5rem;
	border-left-style: solid;
}

.custom-block.right {
	float: right;
	padding: 1em 0 1em 1em;
}

.custom-block.left {
	float: left;
	padding: 1em 1em 1em 0em;
}

:root {
	--accent-color: $accentColor;
	--text-color: $textColor;
	--border-color: $borderColor;
	--code-bg-color: $codeBgColor;
	--highlight-color: $highlightColor;
}
