.navbar {
	width: 100%;
	position: sticky;
	background-color: $reverseTextColor;
	border-bottom: none;

	.logo {
		height: 2.5rem;
		margin: 0;
		padding: 1px 3px 0px 0;
		vertical-align: top;
	}

		.site-name {
		font-size: 1.5rem;
		letter-spacing: -0.05rem;
		background: url('/images/nftschool-logo-text.svg') no-repeat;
		background-position: 0 5px;
		text-indent: -99999px;
		min-width: 226px;
		min-height: 50px;
		background-size: contain;
	}

	.sidebar-button {
		color: $secondaryColor;

		.icon {
			width: 1.75rem;
			height: 1.75rem;
		}
	}
}

header.navbar .links {
	background-color: $reverseTextColor;
}

#algolia-search-input {
	border-radius: 0;
	border-left: 3px solid $tertiaryColor;
  	border-top: 3px solid $tertiaryColor;
  	box-shadow:  4px 4px 0 -2px $secondaryColor;
}

@media (min-width: $MQNarrow) {
	header.navbar .links {
		display: flex;
		flex-direction: row-reverse;

		input, .suggestions {
			width: 10em;
		}

		input:focus, .suggestions {
			width: 20em;
		}
	}
}

@media (max-width: $MQMobile) {
	header.navbar .links {
		input {
			// prevent zooming on iOS
			box-sizing: border-box;
			font-size: 1rem;

			&:focus {
				width: 87.5vw;
			}
		}
	}
}

@media (max-width: $MQMobile) {
	.home-link {
		position: absolute;
		width: 45px;
		left: calc(50% - 45px / 2);
	}
}
